{
  "uid": "host-overview",
  "title": "Host Overview",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "CPU Utilization (%)",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "datasource": { "type": "prometheus", "uid": "PROM" },
      "targets": [
        {
          "refId": "A",
          "expr": "100 - (avg by(instance)(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Memory Utilization (%)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "datasource": { "type": "prometheus", "uid": "PROM" },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Load Average (1m)",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "datasource": { "type": "prometheus", "uid": "PROM" },
      "targets": [
        { "refId": "A", "expr": "node_load1" }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Root FS Used (%)",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "datasource": { "type": "prometheus", "uid": "PROM" },
      "targets": [
        {
          "refId": "A",
          "expr": "100 - (node_filesystem_avail_bytes{fstype!~\"tmpfs|overlay|squashfs\",mountpoint=\"/\"} / node_filesystem_size_bytes{fstype!~\"tmpfs|overlay|squashfs\",mountpoint=\"/\"} * 100)"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Network RX/TX (bytes/s)",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] },
      "datasource": { "type": "prometheus", "uid": "PROM" },
      "targets": [
        {
          "refId": "RX",
          "expr": "sum by(instance)(rate(node_network_receive_bytes_total{device!~\"lo\"}[5m]))"
        },
        {
          "refId": "TX",
          "expr": "sum by(instance)(rate(node_network_transmit_bytes_total{device!~\"lo\"}[5m]))"
        }
      ]
    }
  ],
  "templating": { "list": [] }
}
