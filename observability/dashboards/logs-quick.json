{
  "uid": "logs-quick",
  "title": "Logs Â· Quick Search (Loki)",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "Nginx logs (last hour)",
      "gridPos": {"h": 16, "w": 24, "x": 0, "y": 0},
      "datasource": { "type": "loki", "uid": "LOKI" },
      "targets": [
        { "refId": "A", "expr": "{job=\"nginx\"}" }
      ],
      "options": { "showLabels": true, "wrapLogMessage": true }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Errors (5m)",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "datasource": { "type": "loki", "uid": "LOKI" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({job=\"nginx\"} |= \"error\" [5m]))"
        }
      ]
    }
  ],
  "templating": { "list": [] }
}
